extends ./dashboard.jade

block poll
  div#poll.columns
    div.column.col-3.centered
      h2.green My Polls
      table.table.table-striped.table-hover
        thead
          tr
            th Title of your Poll
            th Votes
            th
            th
            th 
        tbody
          each poll, i in polls
            tr
              td: a(class='btn btn-link' href='/polls/' + poll.hash) #{poll.title}
              td #{poll.votes}
              td: a(class='btn btn-link tooltip' href='#' data-tooltip='Add new option'): i(class='fa fa-plus-circle' aria-hidden='true')
              td: a(class='btn btn-link tooltip tooltip-right' href='#' data-tooltip='Delete poll?'): i(class='fa fa-close' aria-hidden='true')
              td
