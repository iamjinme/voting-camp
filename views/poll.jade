extends ./layout.jade

block css
  link(href='http://cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css', rel='stylesheet')
  
block content
  div(class='container main')
    img(src='/public/img/vote.png' class='img-responsive centered')
    h2(class='title') PollStar App
    p(class='empty-meta') Voting your favorite options in great polls!
  div.container
    div.columns.text-center
      div.column.col-md-4
        h2 #{poll.title}
        a(class='btn btn-primary' href=share target="_blank")
          i(class='fa fa-twitter' aria-hidden='true')
          |  Share this poll!
      div.column.col-md-4
        div.toast.hide
          button(class='btn btn-clear float-right')
          span
            i.fa.fa-exclamation-circle
            span#message  Lorem ipsum dolor sit amet, consectetur adipiscing elit.
        form#vote_poll
          h2.green Options
          div.form-group
            select(class='form-select' name='option')
              option(value='') Choose an option
              each option, i in poll.options
                option(value=i) #{option.name}
          br/
          input(type='hidden' name='hash' value=poll.hash)
          div.form-group
            a(class='btn btn-link' id='reload_graph') Reload results
            button(class='btn btn-primary') Vote!
      div.column.col-md-4
        div#donut
        script var data_graph = !{JSON.stringify(data_graph)}
        
block js
  script(src='http://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js', type='text/javascript')
  script(src='http://cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js', type='text/javascript')
  
